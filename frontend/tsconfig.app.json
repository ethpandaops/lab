{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020", // Different from "target": "ESNext"
    "useDefineForClassFields": true, // Same
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Same
    "allowJs": false, // Same
    "skipLibCheck": true, // Same
    "esModuleInterop": false, // Same
    "allowSyntheticDefaultImports": true, // Same
    "strict": true, // Same
    "forceConsistentCasingInFileNames": true, // Same
    "module": "ESNext", // Same
    "noUnusedLocals": true, // Not in the reference config
    "noUnusedParameters": true, // Not in the reference config
    "noFallthroughCasesInSwitch": true, // Not in the reference config
    "moduleResolution": "bundler", // Different from "moduleResolution": "Node"
    "allowImportingTsExtensions": true, // Not in the reference config
    "moduleDetection": "force", // Not in the reference config
    "resolveJsonModule": true, // Same
    "isolatedModules": true, // Same
    "noEmit": true, // Same
    "jsx": "react-jsx", // Same
    "paths": {
			"@/*": ["src/*"]
    }
    // Missing "verbatimModuleSyntax": true from reference config
  },
  "include": [
    "src"
  ],
  "exclude": []
}
